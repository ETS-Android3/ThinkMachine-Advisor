<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarCard" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorContrast</item>
    </style>

    <style name="SmallToolbarCard" parent="ToolbarCard">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>

    <style name="Card.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Card.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LayoutPadding">
        <item name="android:padding">15sp</item>
    </style>

    <style name="TextSubtitleLayout">
        <item name="android:padding">15sp</item>
    </style>

    <style name="TextSubtitle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">15sp</item>
    </style>

    <style name="CharacterInfo" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputData">
        <item name="android:fontFamily">@font/selection</item>
    </style>

    <style name="NumberPicker">
        <!-- <item name="android:fontFamily">@font/selection</item> -->
    </style>

    <style name="Counter">
        <item name="android:fontFamily">@font/selection</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="CounterTag">
        <item name="android:fontFamily">@font/selection</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/colorContrast</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <style name="Divider.Vertical" parent="Divider">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
